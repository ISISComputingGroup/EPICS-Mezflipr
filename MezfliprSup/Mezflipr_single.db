record(ai, "$(P)$(NAME):COMPENSATION") {
    field(DESC, "$(NAME) Compensation")
    field(INP, "@Mezflipr.proto getCompensation $(PORT)")
    field(SCAN, "1 second")
    field(DTYP, "stream")
    field(PREC, "2")
    field(EGU, "A")
    info(interest, "HIGH")
    info(archive, "VAL")
    
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)$(NAME):SIM:COMPENSATION")
    field(SDIS, "$(P)DISABLE")
}

record(ao, "$(P)$(NAME):COMPENSATION:SP") {
    field(DESC, "$(NAME) Compensation SP")
    field(OUT, "@Mezflipr.proto setCompensation $(PORT)")
    field(DTYP, "stream")
    field(PREC, "2")
    field(EGU, "A")
    
    field(SIML, "$(P)SIM")
